<h1>Listing products</h1>



<%= link_to 'New product', new_product_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr> 
  <% @product.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td><%= product.count %></td>      
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>     
    </tr>
  <% end %>
</table>

<%= link_to 'Back', products_path %>